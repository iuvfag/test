
public class Person {

	private String name = null;
	private int age = 0;
	//フィールド変数を定義
	//後にthisの値を代入

	public Person(){

	}

	public Person(String name, int age){
		this.name = name;
		this.age = age;
	}
	//コンストラクタを定義
	//インスタンス化する際の窓口

	public String getName(){
		//publicなので外部から見れる
		return this.name;
		//this.nameを返す
	}
	//getter

	public void setName(String name){
		this.name = name;
	}
	//setter

}
