$(function(){
	$('a[href = "#"]').click(function(){
		var speed = 500;
		var href = $(this).attr("href");
		/* 上記の文で「hrefタグのhref属性の値」
		 * を入手することが出来る */
		var target = $(href == "#" || href == "" ? 'html' : href);
		/* 入手した値が＃か空欄の場合はhtmlを
		 * そうでない場合はhref(href属性の値を再度とってくる)を
		 * targetに代入 */
		var position = target.offset().top;

		$("html, body").animate({
			scrollTop : position
		}, speed, "swing");
		return false;
	});
});